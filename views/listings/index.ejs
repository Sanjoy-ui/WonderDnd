<% layout("/layouts/boilerplate") %>
<body>
    <h3>All listings</h3>
    
    <!-- <form method="get" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->
    
    <% if (data_Collections && data_Collections.length > 0) { %>
        <ul>
            <% data_Collections.forEach(function(data) { %>
                <li><a href="/listings/<%=data._id%>"><%=data.title%></a></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No listings available. <a href="/listings/new">Create the first one!</a></p>
    <% } %>
</body>
