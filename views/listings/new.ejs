<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <form action="/listings" class="needs-validation" method="post" novalidate>
        <div class="mb-3">
        <label class="form-label"  for="title">Title</label>
        <input type="text" name="listing[title]" required class="form-control" placeholder="Enter title">
        <div class="valid-feedback">Title looks good</div>
        <div class="invalid-feedback">Enter title</div>
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <textarea type="text" required class="form-control" rows="5" name="listing[description]" placeholder="Enter description"></textarea>
            <div class="valid-feedback">Description looks good</div>
        <div class="invalid-feedback">Fill the Description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" class="form-control" name="listing[image][url]" placeholder="Enter image url">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" required class="form-control" name="listing[price]" placeholder="Enter price">
            <div class="invalid-feedback">Please Enter valid price</div>
            <div class="valid-feedback">Looks Juicy</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" required class="form-control" name="listing[country]" placeholder="Enter country">
        </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Locataion</label>
            <input type="text" required class="form-control" name="listing[location]" placeholder="Enter location">
        </div>
        
        <button class="add-btn btn btn-dark mb-3" type="submit">Submit</button>
    </form>
    </div>
</div>
</body>
